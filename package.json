{
  "name": "zinnia-ah-frontend",
  "version": "1.0.0",
  "description": "Authors Haven - A Social platform for the creative at heart.",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ],
    "*.scss": [
      "npm run sass-lint:fix",
      "git add --force"
    ]
  },
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest -u --watchAll --verbose",
    "test:coverage": "jest --verbose --coverage",
    "watch": "webpack-dev-server --mode development --open --hot",
    "start": "node server.js",
    "build": "NODE_ENV=production webpack --mode production",
    "prettier": "prettier --write '**/*.{js,jsx}'",
    "lint": "node_modules/eslint/bin/eslint.js src --fix",
    "sass-lint": "sass-lint 'src/**/*.scss' -q -v",
    "sass-lint:fix": "npm run sass-lint && sass-lint-auto-fix"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "./src/setupTests.js"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss|svg)$": "<rootDir>/src/components/__mocks__/fileMock.js",
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2)$": "babel-jest"
    },
    "transform": {
      "^.+\\.(jsx|js)?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/zinnia-ah-frontend.git"
  },
  "author": "Team Zinnia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela/zinnia-ah-frontend/issues"
  },
  "homepage": "https://github.com/andela/zinnia-ah-frontend#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "check-prop-types": "^1.1.2",
    "css-loader": "^2.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.7.1",
    "jest-enzyme": "^7.0.2",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.12.0",
    "path": "^0.12.7",
    "prettier": "^1.17.0",
    "prop-types": "^15.7.2",
    "react-hot-loader": "^4.8.4",
    "redux-mock-store": "^1.5.3",
    "sass-lint": "^1.13.1",
    "sass-lint-auto-fix": "^0.17.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^8.0.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "qs": "^6.7.0",
    "moment": "^2.24.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-test-renderer": "^16.8.6",
    "react-toastify": "^5.1.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.86.0"
  }
}
